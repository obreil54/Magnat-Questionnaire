<div class="card">
  <h1>Введите Пароль</h1>
  <div class="form">
    <%= simple_form_for :session, url: verify_admin_password_path, method: :post do |f| %>
      <%= f.input :password, required: true, label: "Пароль", input_html: { minlength: 6 } %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Запомнить меня" %>
      </div>
      <h2 class="button"><%= f.button :submit, "Войти" %></h2>
    <% end %>
  </div>
</div>
