<div class="card">
  <h1><%= @user.name %></h1>
  <h2>Информация</h2>
  <p>Email: <%= @user.email %></p>
  <p>Статус: <%= @user.status? ? 'Действующий' : "Не Действующий" %></p>
  <p>Администратор: <%= @user.admin? ? 'Да' : "Нет" %></p>
  <h2>Техника</h2>
  <% @user.hardwares.each do |hardware| %>
    <ul>
      <li><%= link_to "#{hardware.category_hard.name} - #{hardware.model}", admin_hardware_path(hardware) %></li>
    </ul>
  <% end %>
  <h2>Действия</h2>
  <div>
    <%= link_to 'Изменить', edit_admin_user_path(@user), class: "button" %>
    <%= link_to 'Удалить', admin_user_path(@user), data: { confirm: 'Вы уверены?', turbo_method: :delete }, class: "button-red" %>
  </div>
  <%= link_to 'Назад', :back, class: "button" %>
</div>
