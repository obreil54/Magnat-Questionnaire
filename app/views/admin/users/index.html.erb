<div class="card">
  <h1>Сотрудники</h1>
  <%= link_to 'Добавить сотрудника', new_admin_user_path, class: "button" %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Имя</th>
        <th>Статус</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.status? ? 'Действующий' : "Не Действующий" %></td>
          <td>
            <%= link_to 'Показать', admin_user_path(user), class: "button" %>
            <%= link_to 'Изменить', edit_admin_user_path(user), class: "button" %>
            <%= link_to 'Удалить', admin_user_path(user), data: { confirm: 'Вы уверены?', turbo_method: :delete }, class: "button-red" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Назад', admin_dashboard_path, class: "button" %>
</div>
